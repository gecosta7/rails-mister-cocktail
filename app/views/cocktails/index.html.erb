<p id="notice"><%= notice %></p>
  <div id="wrapper">
    <div class="container" id="">
      <div class="row">

        <% @cocktails.each do |cocktail| %>
        <div class=" thumbnail thumb-shadow col-xs-6 col-sm-3">
          <div class="card"
          style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),
          url('<%= cl_image_path cocktail.safe_photo, height: 300, width: 400, crop: :fill %>')">
          <div class="card-category">Cocktails</div>
          <div class="card-description">
            <h2><%= cocktail.name %></h2>
            <p></p>
          </div>

          <%= link_to '', cocktail_path(cocktail), class: 'card-link', id: 'img-thumbnail' %>
        </div>
        <%= link_to 'Edit', edit_cocktail_path(cocktail) %>
        <%= link_to 'Delete', cocktail_path(cocktail), method: :delete %>
      </div>

      <% end %>
    </div>
  </div>
</div>


<br>
<%= link_to 'New Cocktail', new_cocktail_path %>



