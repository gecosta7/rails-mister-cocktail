<div class="container">
  <p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @cocktail.name %>
</p>

<%= link_to 'Edit', edit_cocktail_path(@cocktail) %> |
<%= link_to 'Back', cocktails_path %> |
<%= link_to 'add new dose', new_cocktail_dose_path(@cocktail) %>

<% @cocktail.doses.each do |dose| %>
<p><%= dose.description %> <%= dose.ingredient.name %></p>
<% end %>

<%= cl_image_tag @cocktail.photo, height: 300, width: 400, crop: :fill %>


</div>

